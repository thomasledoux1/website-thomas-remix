{
  "private": true,
  "name": "thomas-website",
  "description": "Thomas Ledoux Remix Website",
  "license": "ISC",
  "scripts": {
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "dev": "concurrently \"npm run dev:css\" \"node -r dotenv/config node_modules/.bin/remix dev\"",
    "dev:css": "tailwindcss -i ./app/styles/global.css -o ./app/styles/tailwind.css --watch",
    "postinstall": "remix setup node",
    "start": "node -r dotenv/config node_modules/.bin/remix-serve ./api/build",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "type-check": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^1.1.1",
    "@remix-run/react": "^1.0.5",
    "@remix-run/serve": "^1.0.5",
    "@remix-run/vercel": "^1.0.6",
    "dotenv": "^10.0.0",
    "framer-motion": "^6.2.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/sharp": "^0.29.5",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.1",
    "concurrently": "^6.4.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "postcss": "^8.4.1",
    "postcss-cli": "^9.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "version": "1.0.0",
  "author": ""
}
